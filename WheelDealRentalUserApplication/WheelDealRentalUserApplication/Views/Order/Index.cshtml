@{
}

@model List<WheelDealRentalUserApplication.Models.Order>

<div class="container">

    <div class="row">
        
    </div>


    <table class="table mt-5">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">OrderId</th>
                <th scope="col">Total Cost</th>
                
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < @Model.Count; i++)
            {
                var item = Model[i];

                <tr>
                    <th scope="row">@(i+1)</th>
                    <td>@item.Id</td>
                    <td>@item.TotalPrice $</td>
                    
                    <td><a class="btn btn-outline-secondary" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                    
                </tr>

            }
        </tbody>


    </table>

</div>